<div class="container form-container">
  <h2 class="text-center mb-2">Log in to SurpriseMe </h2>
  <div class="d-flex justify-content-center m-4">
    <p>No account?</p>
    <%= link_to "Sign up",new_user_registration_path,class:"sign-in-text"%>
  </div>

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email",class:"input-styling" } %>
      <%= f.input :password,
                  required: false,
                  input_html: { autocomplete: "current-password",class:"input-styling" } %>

      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Log in",class: "surprise-pink-btn" %>
    </div>
  <% end %>

  <%# <%= render "users/shared/links" %>
</div>
