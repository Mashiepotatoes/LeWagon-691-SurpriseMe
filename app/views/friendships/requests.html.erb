<div class="friends">

  <h1>Hello <%= current_user.username %></h1>
  <%# <--- Search bar ---> %>
    <%= simple_form_for :friendships, url: "/friendships/search", method: :get do |f| %>
      <div class="search-form-control mt-3 ">
        <input class="form-control required round-searchbar" type="text" name="query" id="query" placeholder="Find a friend"/>
        <button name="button" type="submit" class="button-none" >
          <i class="fas fa-search search-icon search-icon-landing"></i>
        </button>
      </div>
    <% end %>
</div>

<div class="friend-page-container">

  <div class="friend-side-panel">
    <p><%= link_to "Your friends", friendships_path%></p>
    <p><%= link_to "Friend Request", friendships_requests_path%></p>
    <p><%= link_to "Birthday reminder", "#"%></p>
  </div>

  <div class="friend-content container">
    <div class="d-flex justify-content-between align-items-center">
      <h2 class="page-func"> Friend requests </h2>

      <button type="button" data-toggle="modal" data-target="#exampleModalCenter">
          View Sent request
      </button>
    </div>

<!------ view sent request --------->
    <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
      <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLongTitle">Sent friend request</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body p-0">

            <% @requests.each do |request| %>
              <div class="request">
                <div class="avatar-bordered">
                </div>
                <div class="request-name">
                  <%= request.friend.username %>
                </div>
                <div class="cancel-request">
                  <%link_to "Cancel",friendships_path %>
                </div>
              </div>
            <% end %>

          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>

          </div>
        </div>
      </div>
    </div>
<!------- End of modal -- ----->
  <div class="friend-request-container">
    <% @invitations.each do |invitation| %>
      <div class="friend-request-rect">

        <div class="friend-request-photo">
          <%# <img src="" alt=""> %>
        </div>

        <div class="friend-request-content">
          <div class="">
            <p><%= invitation.user.username %><p>
          </div>

          <div class="accept-grp">
            <%= link_to "Accept",  friendships_accept_path(invitation: invitation) ,method: :post,class:"btn btn-primary" %>
          </div>

        </div>

      </div>
    <% end %>

  </div>


</div>
