<div class="rating-container-page">
<h1 class="chelsea-yellow">Rate a product</h1>
  <div class="container rating-container d-flex justify-content-center align-items-center">
    <div class="rating-container-inner shadowed">
      <%= simple_form_for @rating, url: product_rating_index_path do |f| %>
        <h1><%= @product.name %></h1>
        <%= f.input :rating, collection: (1..5).to_a, label: 'Rating:' %>
        <%= f.submit class: 'btn btn-flat btn-block btn-rating' %>
      <% end %>
    </div>
  </div>
</div>
